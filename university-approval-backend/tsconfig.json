{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language & Module Settings */
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Node Environment */
    "lib": ["ES2020"],
    "types": ["node"],

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Optional: Helpful for debugging */
    "sourceMap": true
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules"]
}
